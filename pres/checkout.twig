                                        <div class='col-md-7'>
                                            {{winkelmandItem.aantal}}
                                        </div>


                                    </div>

                                </td>
                                <td>
                                    {% for extra in winkelmandItem.extras %}
                                        <p>{{extra.naam}}</p>
                                    {% endfor %}
                                </td>
                                <td>{% set totaal = totaal + winkelmandItem.subtotaal %}
                                    &euro; {{winkelmandItem.subtotaal}}
