<html>
    <head>
        <meta charset="UTF-8">
        <title>Registreer</title>
    </head>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/bootstrapValidator.min.css" rel="stylesheet" type="text/css"/>
    <link href="css/style.css" rel="stylesheet" type="text/css"/>

    <script src="js/jquery-1.11.1.min.js" type="text/javascript"></script>
    <script src="js/bootstrap.min.js" type="text/javascript"></script>
    <script src="js/bootstrapValidator.min.js" type="text/javascript"></script>
    <script src="js/be_NL.js" type="text/javascript"></script>
    <body>

        {% include 'navigation.twig' %}
        <div class="jumbotron">
            <div class="container">
                <br>
                <br>
                <h1>Arne's Pizzashop</h1>
                <p><span class='label label-default'>Online Pizza Bestellen!</span></p>
            </div>
        </div>
        <div class="container">
            {% if failed == true %}
                <p class="text-danger">Gelieve alle velden in te vullen</p>
            {% endif %}
            <form class="form-horizontal" role="form" method="post" action='registreer.php' id='frmRegistreer'>
                <legend>Registratie</legend>

                <div class="form-group">
                    <label for="inputVoornaam" class="col-sm-2 control-label">Voornaam:</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="inputVoornaam" name="inputVoornaam" placeholder='Voornaam'>
                    </div> 


                </div>
                <div class="form-group">
                    <label for="inputNaam" class="col-sm-2 control-label">Naam:</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="inputNaam" name="inputNaam" placeholder="Naam">
                    </div> 

                </div>

                <div class="form-group">
                    <label for="inputAdres" class="col-sm-2 control-label">Adres:</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="inputAdres" name="inputAdres" placeholder="Straat + Huisnummer">
                    </div> 

                </div>
                <div class="form-group">
                    <label for="inputPostcode" class="col-sm-2 control-label">Postcode:</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="inputPostcode" name="inputPostcode" placeholder="Postcode">
                    </div> 

                </div>
                <div class="form-group">
                    <label for="inputGemeente" class="col-sm-2 control-label">Gemeente:</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="inputGemeente" name="inputGemeente" placeholder="Gemeente">
                    </div> 

                </div>

                <div class="form-group">
                    <label for="inputTelefoon" class="col-sm-2 control-label">Telefoonnummer:</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="inputTelefoon" name="inputTelefoon" placeholder="Telefoonnummer">
                    </div> 

                </div>

                <div class="form-group">
                    <label for="inputEmail" class="col-sm-2 control-label">E-mailadres:</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="inputEmail" name="inputEmail" placeholder="E-mailadres">
                    </div> 

                </div>
                <legend></legend>
                <div class="form-group">
                    <label for="inputGebruikersnaam" class="col-sm-2 control-label">Gebruikersnaam:</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="inputGebruikersnaam" name="inputGebruikersnaam" placeholder="Gebruikersnaam">
                    </div> 

                </div>

                <div class="form-group">
                    <label for="inputWw1" class="col-sm-2 control-label">Wachtwoord:</label>
                    <div class="col-sm-4">
                        <input type="password" class="form-control" id="inputWw1" name="inputWw1" placeholder="Wachtwoord">
                    </div> 

                </div>

                <div class="form-group">
                    <label for="inputWw2" class="col-sm-2 control-label">Herhaal Wachtwoord:</label>
                    <div class="col-sm-4">
                        <input type="password" class="form-control" id="inputWw2" name="inputWw2" placeholder="Voer het wachtwoord opnieuw in">
                    </div> 

                </div>
                <div class="form-group">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-2">
                        <input type="submit" class="form-control btn btn-default" value="Registreer">
                    </div>
                </div>

            </form>
        </div>
        <div class="container">

            <footer>
                <hr>
                <p>Â© Arne Slabbinck 2014</p>
            </footer>
        </div>


        <script>
            $(document).ready(function() {
                $('#frmRegistreer').bootstrapValidator({
                    // To use feedback icons, ensure that you use Bootstrap v3.1.0 or later
                    feedbackIcons: {
                        valid: 'glyphicon glyphicon-ok',
                        invalid: 'glyphicon glyphicon-remove',
                        validating: 'glyphicon glyphicon-refresh'
                    },
                    fields: {
                        inputVoornaam: {
                            message: 'The username is not valid',
                            validators: {
                                notEmpty: {
                                    message: 'Voornaam is verplicht'
                                },
                                regexp: {
                                    regexp: /^[a-zA-Z]+$/,
                                    message: 'Voornaam kan alleen bestaan uit letters van het alfabet'
                                },
                            }
                        },
                        inputNaam: {
                            message: 'The username is not valid',
                            validators: {
                                notEmpty: {
                                    message: 'Naam is verplicht'
                                },
                                regexp: {
                                    regexp: /^[a-zA-Z]+$/,
                                    message: 'Naam kan alleen bestaan uit letters van het alfabet'
                                },
                            }
                        },
                        inputAdres: {
                            message: 'The username is not valid',
                            validators: {
                                notEmpty: {
                                    message: 'Adres is verplicht'
                                },
                            }
                        },
                        inputPostcode: {
                            message: 'The username is not valid',
                            validators: {
                                notEmpty: {
                                    message: 'Postcode is verplicht'
                                },
                            }
                        },
                        inputGemeente: {
                            message: 'The username is not valid',
                            validators: {
                                notEmpty: {
                                    message: 'Gemeente is verplicht'
                                },
                            }
                        },
                        inputTelefoon: {
                            message: 'The username is not valid',
                            validators: {
                                notEmpty: {
                                    message: 'Telefoonnummer is verplicht'
                                },
                                digits: {
                                    message: 'Telefoonnummer kan alleen uit cijfers bestaan'
                                }
                            }
                        },
                        inputEmail: {
                            validators: {
                                notEmpty: {
                                    message: 'E-mail adres is verplicht'
                                },
                                emailAddress: {
                                    message: 'Dit is geen geldig E-mail adres'
                                }
                            }
                        },
                        inputGebruikersnaam: {
                            validators: {
                                notEmpty: {
                                    message: 'Gebruikersnaam is verplicht'
                                },
                                stringLength: {
                                    min: 4,
                                    message: 'Uw gebruikersnaam moet minimum uit 4 tekens bestaan'
                                }
                            }
                        },
                        inputWw1: {
                            validators: {
                                notEmpty: {
                                    message: 'Wachtwoord is verplicht'
                                },
                                different: {
                                    field: 'inputGebruikersnaam',
                                    message: 'Uw wachtwoord kan niet dezelfde zijn als uw gebruikersnaam'
                                },
                                stringLength: {
                                    min: 6,
                                    message: 'Uw wachtwoord moet minimum uit 6 tekens bestaan'
                                }
                            }
                        },
                        inputWw2: {
                            validators: {
                                notEmpty: {
                                    message: 'Herhaal uw wachtwoord'
                                },
                                identical: {
                                    field: "inputWw1",
                                    message: "Uw wachtwoorden komen niet overeen"
                                }
                            }
                        }
                    }
                });
            });
        </script>

    </body>
</html>